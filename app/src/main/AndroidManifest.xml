<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitfourdesktop.group10_teacherspal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Scores"
            android:label="@string/scoreList"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fitfourdesktop.group10_teacherspal.MainActivity" />
        </activity>
        <activity
            android:name=".VoiceChanger"
            android:label="@string/voiceChanger"
            android:parentActivityName=".Games">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fitfourdesktop.group10_teacherspal.Games" />
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/profile"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fitfourdesktop.group10_teacherspal.MainActivity" />
        </activity>
        <activity
            android:name=".Games"
            android:label="@string/gameMenu"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fitfourdesktop.group10_teacherspal.MainActivity" />
        </activity>
        <activity
            android:name=".Memory"
            android:label="@string/Memory"
            android:parentActivityName=".Games">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fitfourdesktop.group10_teacherspal.Games" />
        </activity>
        <activity
            android:name=".Puzzle"
            android:label="@string/Puzzle"
            android:parentActivityName=".Games">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fitfourdesktop.group10_teacherspal.Games" />
        </activity>
        <activity android:name=".ProfileView"></activity>
    </application>

</manifest>